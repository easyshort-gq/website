<%- include('head', { title: 'easyshort.gq' }) -%>

<body>
    <h1 onclick="home()">URL Shortener</h1>
    <div>
        <h2>Get URL stats</h2>
        <h3>... how many clicks has my URL?</h3>
        <form method="post" action="/getc">
        <input type="text" id="url" name="url" placeholder="Insert the URL code here..." autocomplete="off" required>
        <p style="font-size: 0.8em; margin-top: 0; margin-left: 2em; margin-bottom: 0;">For example, if the URL is <span style="color: darkgray">easyshort.gq/abcdef</span>, you have to insert <span style="color: darkgray">abcdef</span>.</p><br>
        <% if(success) { %>
            <p style="color: green; margin-left: 2em; margin-top: 0; margin-bottom: 0;">Your URL has <%= success %>!</p>
        <% } %>
        <% if(errors) { %>
            <p id="err" style="color: red; margin-left: 2em; margin-top: 0; margin-bottom: 0">The provided URL does not exist.</p>
        <% } %>
        <button type="submit">Get URL stats</button>
        </form>
    </div>
    <footer>
        <p>&copy; <span id="data"></span> - <a onclick="github()">ale_006</a> | <a onclick="about()">About & Terms</a> | <a onclick="cl()">Clicks Counter</a> | <a onclick="report()">Report Abuse</a> | <a onclick="dbstat()">Database Status</a></p>
        <p id="xy"></p>
    </footer>
</body>
<script>
    document.getElementById("data").innerHTML = new Date().getFullYear()
    function about() {
        window.location.href = "/about"
    }
    function home() {
        window.open("/")
    }
    function github() {
        window.open("https://github.com/ale-006", "__blank")
    }
    function report() {
        window.location.href = ""
    }
    function dbstat() {
        window.open("https://status.supabase.com/", "__blank")
    }
    function home() {
        window.location.href = "/"
    }
    function cl () {
        window.location.href = "/clicks"
    }
    setTimeout(() => {
        document.getElementById("err").style.display = "none"
    }, 2000);
</script>
<style>
@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
body {
    font-family: 'Roboto', sans-serif;
    background-color: lightblue;
    user-select: none;
}
h2 {
    margin-top: 0;
    padding-left: 1em;
    margin-bottom: 0;
}
h3 {
    padding-left: 2em;
    margin-top: 0;
    font-size: 1em;
}
h1 {
    text-align: center;
    margin-bottom: 2em;
}
a, span {
    margin: 3px;
}
a:hover {
    margin: 0px;
    background-color: gray;
    border-radius: 3px;
    padding: 3px;
}
div {
    width: 50em;
    padding-top: 14px;
    padding-bottom: 14px;
    border-radius: 2em;
    background-color: white;
    text-align: left;
    align-items: left;
    padding: 2em;
    position: absolute; top: 50%; left: 50%; transform:translate(-50%, -50%)
}
input {
    padding: 1em;
    width: 88%;
    border: 0.2em solid black;
    border-radius: 10px;
    height: 70%;
    margin: 2em;
    margin-top: 0;
    margin-bottom: 0.5em;
    transition-duration: 0.4s;
}
textarea {
    font-family: 'Roboto', sans-serif;
    padding: 1em;
    width: 88%;
    border: 0.2em solid black;
    border-radius: 10px;
    margin: 2em;
    margin-top: 0;
    margin-bottom: 0;
    transition-duration: 0.4s;
}
input:focus, textarea:focus {
    background-color: lightgray;
}
input:hover, textarea:hover {
    background-color: lightgray;
}
button {
    margin: 2em;
    margin-top: 1em;
    margin-bottom: 0;
    height: 3em;
    width: 20%;
    border: 0.2em solid black;
    border-radius: 10px;
    transition-duration: 0.4s;
}
button:hover {
    background-color: lightgray;
}
footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: rgb(0, 162, 255);
    text-align: center;
    left: 0;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}
@media screen and (max-width: 900px) {
    h1 {
        margin-bottom: 0;
    }
    div {
        width: 20em;
        margin-top: 0;
    }
}
</style>