<%- include('head', { title: 'easyshort.gq' }) -%>

<body onload="betalert()">
    <img src="https://cdn-icons-png.flaticon.com/512/3214/3214679.png"><h1>easyshort.gq</h1><h2>Simple, easy and free URL shortener.</h2>
    <center>
    <button onclick="createUrl()"><b>Short an URL</b></button><br>
    <button onclick="botInvite()"><b>Discord Bot</b></button>
    </center>
    <footer>
        <center>
        <table>
            <td style="border-left: none;">
                <h3>Credits:</h3>
                <ul>
                    <li>Created by <a onclick="github()">Alessandro Baio</a></li>
                    <li><a onclick="flaticon()">Logo created by Freepik - Flaticon</a></li>
                </ul>
            </td>
            <td>
                <h3>Stats:</h3>
                <ul>
                    <li><%= linkaccor %> shortened links</li>
                    <li><%= siteacc %> website access</li>
                </ul>
            </td>
            <td>
                <h3>Legals:</h3>
                <ul>
                    <li onclick="termss()">Terms of Service</li>
                    <li onclick="privacy()">Privacy Policy</li>
                </ul>
            </td>
        </table>
        </center>
    </footer>
</body>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Alatsi&display=swap');
    body {
        user-select: none;
        font-family: 'Alatsi', sans-serif;
        background-color: #d7f1fa;
    }
    button {
        width: 17em;
        height: 3em;
        background-color: lightblue;
        border-radius: 100px;
        margin-top: 5em;
        border: 0.2em solid blue;
        text-decoration: solid;
        font-size: 1em;
        transition-duration: 0.4s;
        -webkit-transition-duration: 0.4s;
    }
    button:hover {
        transform: scale(110%);
    }
    img {
        float: left;
        width: 3.5em;
        height: 3.5em;
        margin: 0.5em;
        margin-top: 1em;
        margin-right: 1.5em;
    }
    h1 {
        margin-top: 0em;
        font-size: 3em;
        margin-bottom: 0em;
    }
    h2 {
        margin-left: 6em;
        margin-top: 0em;
        font-size: 1em;
    }
    footer {
        position: fixed;
        bottom: 0;
        background-color: aquamarine;
        width: 100%;
        left: 0;
        padding: 1em;
    }
    td {
        width: 20em;
        border-left: 1px solid black;
        padding-left: 3em;
    }
    @media only screen and (max-width: 500px) {
        td {
            display: inline-block;
            border: none;
        }
        button {
            margin-top: 5em;
        }
    }
</style>
<script>
    function botInvite() {
        window.open("https://discord.com/api/oauth2/authorize?client_id=947875954586435634&permissions=1024&scope=bot%20applications.commands", "__blank")
    }
    function support() {
        window.open("https://discord.gg/X4nGGPvJJY", "__blank")
    }
    function github() {
        window.open("https://github.com/ale-006", "__blank")
    }
    function flaticon() {
        window.open("https://www.flaticon.com/free-icons/url", "__blank")
    }
    function termss() {
        window.open("/terms")
    }
    function privacy() {
        window.open("/privacy")
    }
    function betalert() {
        alert("This project is published in beta version. The stable version will be released soon.\n\n- 03 march 2022, easyshort staff")
    }
    function createUrl() {
        window.open("/short")
    }
</script>
</html>
