<%- include('head', { title: 'easyshort.gq' }) -%>

<body>
    <h1 onclick="home()">URL Shortener</h1>
    <div>
        <h2>Report an URL</h2>
        <h3>... that is agains our <a onclick="about()">Terms of Service</a></h3>
        <form method="post" action="/reporturl">
        <input type="url" id="url" name="url" placeholder="Insert the URL here..." autocomplete="off" required><br>
        <textarea id="motivo" name="motivo" placeholder="Explain the motivation here..." autocomplete="off" required></textarea><br>
        <% if(success) { %>
            <p style="color: green; margin-left: 2em;">The provided URL was successfully reported!</p>
        <% } %>
        <% if(errors) { %>
            <p id="err" style="color: red; margin-left: 2em">Something went wrong, try again later.</p>
        <% } %>
        <button type="submit">Report URL</button>
        </form>
    </div>
    <footer>
        <p>&copy; <span id="data"></span> - <a onclick="github()">ale_006</a> | <a onclick="about()">About & Terms</a> | <a onclick="report()">Report Abuse</a> | <a onclick="dbstat()">Database Status</a></p>
        <p id="xy"></p>
    </footer>
</body>
<script>
    document.getElementById("data").innerHTML = new Date().getFullYear()
    function about() {
        window.location.href = "/about"
    }
    function home() {
        window.open("/")
    }
    function github() {
        window.open("https://github.com/ale-006", "__blank")
    }
    function report() {
        window.location.href = ""
    }
    function dbstat() {
        window.open("https://status.supabase.com/", "__blank")
    }
    function home() {
        window.location.href = "/"
    }
    setTimeout(() => {
        document.getElementById("err").style.display = "none"
    }, 2000);
</script>
<style>
@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
body {
    font-family: 'Roboto', sans-serif;
